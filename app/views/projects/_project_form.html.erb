<%= form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Name your next project..." %>
  </div>
  <div class="field">
    <%= f.text_area :description, placeholder: "Add a description" %>
  </div>
  <% if @project.id %>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Create", class: "btn btn-primary" %>
  <% end %>
<% end %>
