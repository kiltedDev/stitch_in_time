<% provide(:title, @user.nickname) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.nickname %>
      </h1>
    </section>
    <section class="project_form">
      <%= render 'shared/project_form' %>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.projects.any? %>
    <h3>Projects (<%= @user.projects.count %>)</h3>
    <div class="list-group">
    <% @projects.each do |project| %>
        <%= link_to project_path(project), class: "list-group-item" do %>
          <h2 class="h3"><small> <%= project.name %></small></h2>
       <% end %>
    <% end %>
    </div>
    <%= will_paginate @projects, previous_label: '<', next_label: '>' %>
  <% end %>
</div>
</div>
