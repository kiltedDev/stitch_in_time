<% provide(:title, @user.nickname) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.nickname %>
      </h1>
    </section>
    <section class="project_form">
      <%= render 'shared/project_form' %>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.projects.any? %>
    <h3>Projects (<%= @user.projects.count %>)</h3>
    <ol class="projects">
      <%= render @projects %>
    </ol>
    <%= will_paginate @projects %>
  <% end %>
</div>
</div>
